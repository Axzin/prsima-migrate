generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id   String @id
  name String
  activity activity[] @relation("UserActivities")
}

model activity {
  id        String   @id @default(uuid())
  author    String
  timestamp DateTime
  location  Json?
  weather   Json?
  health    Json?
  item_name String

  users users @relation(fields: [author], references: [id], name: "UserActivities")

  @@index([author])
}
